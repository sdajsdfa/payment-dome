<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yhgc.api.mapper.UserInfoMapper">

    <select id="searchPage" resultType="com.yhgc.api.entity.UserInfo">
        select * from user_info
        <where>
            <if test="query != null and query != ''">
                name like concat('%',#{query},'%') or account like concat('%',#{query},'%')
            </if>
            and status = 0
        </where>
    </select>
    <select id="getUserById" resultType="com.yhgc.api.dto.UserInfoDto">
        select * from user_info where id = #{id}
    </select>
    <select id="queryAllName" resultType="com.yhgc.api.vo.UserInfoVo">
        select id,name from user_info where status = 0
    </select>
</mapper>
